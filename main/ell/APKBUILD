pkgname=ell
pkgver=0.39
pkgrel=0
pkgdesc="Linux library for embedded development"
url="https://01.org/ell"
arch="all"
license="GPL-2.0-only"
makedepends="glib-dev linux-headers"
checkdepends="dbus"
subpackages="$pkgname-dev"
source="https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$pkgver.tar.gz
	"

case "$CARCH" in
        riscv64) options="$options !check" ;; # FAIL: unit/test-cipher
esac

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-glib
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="18e336a28b6594554cfaafc2d81e3d327d9970e190fc8f6356701e6a6223b704303a301c9c346caaf04a95a1ad49423efaff0b42ea019dc8ed2f1b9f3cc5dba8  ell-0.39.tar.gz"
